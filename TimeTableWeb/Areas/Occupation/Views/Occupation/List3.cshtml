@model IDictionary<string, int>
@{
    ViewBag.Title = "Occupation List Three";
}
<div class="container">
    <div class="col-md-2">
        <table class="table table-striped">
            <tr>
                <th>Code</th>
                <th>Count</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Key</td>
                    <td>@item.Value</td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-10">
        <style>
            .chart {
                padding: 0;
                margin: 37px 0;
            }

            .forward {
                text-anchor: start;
            }

            .backward {
                text-anchor: end;
            }
        </style>
        <svg class="chart col-md-10" height="500">
        </svg>
        <script src="http://d3js.org/d3.v3.min.js" charset="utf-8"></script>
        <script>
            var nocValues = @Json.Encode(Model.Values);

            var barheight = 37;
            var barrealheight = 35;

            var width = $(".chart").width();
            var height = @Model.Count() * barheight;
            var svg = d3.select(".chart")
					   .attr("height", height);

            var scale = d3.scale.linear()
                .domain([0,d3.max(nocValues)])
                .range([0,width *0.8]);

            svg.selectAll("rect")
               .data(nocValues)
               .enter()
               .append("rect")
               .attr("x", 30)
               .attr("y", function (d, i) {
                   return i * barheight;
               })
               .attr("height", barrealheight)
               .attr("width", 0)
               .attr("fill", "red")
               .attr("rx", 0)
               .attr("ry", 0)
               .attr("pointer-events", "none")
               .on("mouseover",function(d,i){
                    d3.select(this)
                        .transition()
                        .duration(500)
                        .attr("rx", 15)
                        .attr("ry", 15)
                        .attr("x",45)
                })
               .on("mouseout",function(d,i){
                   d3.select(this)
                       .transition()
                       .duration(500)
                       .attr("rx", 0)
                       .attr("ry", 0)
                       .attr("x",30)
               })
               .transition()
               .duration(3000)
               .attr("width", scale)
               .attr("fill","steelblue")
               .transition()
               .attr("pointer-events", "")

            svg.selectAll("text")
               .data(nocValues)
               .enter()
               .append("text")
               .attr("x", function(d,i){
                   return 25 + scale(d);
               } )
               .attr("y",function(d,i){
                   return i * barheight;
               })
               .attr("dy",2 + barheight/2)
               .attr("text-anchor", "end")
               .attr("font-size", 14)
               .attr("fill","white")
               .text(function(d,i){
                   return d;
               });
        </script>
    </div>
</div>

